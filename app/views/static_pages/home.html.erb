<nav>
  <%= form_with method: :get do |form| %>
    <%= form.number_field :user_id, placeholder: 'User id' %>
    <%= form.submit "Get photos" %>
  <% end %>
</nav>
<% unless @user_photos.nil? %>
  <section class='grid'>
    <% @user_photos.each do |photo| %>
      <article class='container'><img src="<%= Flickr.url_n(photo) %>"/></article>
    <% end %>
  </section>
<% end %>
